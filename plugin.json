{
    "id": "nodebb-plugin-amazon-affiliate",
    "name": "NodeBB Amazon Affiliate Plugin",
    "description": "Rewrites amazon.com links in posts and signatures to include your affiliate tag",
    "url": "https://github.com/j-miner/nodebb-plugin-amazon-affiliate",
    "library": "./library.js",
    "hooks": [
        {
            "hook": "filter:parse.post",
            "method": "parse",
            "callbacked": true
        }, {
            "hook": "filter:parse.signature",
            "method": "parse",
            "callbacked": true
        }, {
            "hook": "filter:messaging.parse",
            "method": "parse",
            "callbacked": true
        }
    ]
}
